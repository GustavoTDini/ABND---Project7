<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="4dp">

    <ImageView
        android:id="@+id/news_list_thumbnail"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imageView2"
        android:contentDescription="@string/thumbnail_image"
        android:src="@drawable/news_placeholder" />

    <TextView
        android:id="@+id/news_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/news_list_section"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/news_list_thumbnail"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/open_in_browser_icon"
        android:src="@drawable/ic_open_in_browser" />

    <TextView
        android:id="@+id/news_list_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="4dp"/>

</RelativeLayout>
